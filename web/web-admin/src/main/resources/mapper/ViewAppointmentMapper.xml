<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xu.lease.web.admin.mapper.ViewAppointmentMapper">
       <resultMap id="AppointmentVoMap" type="com.xu.lease.web.admin.vo.appointment.AppointmentVo" autoMapping="true">
              <id property="id" column="id" />
              <association property="apartmentInfo" javaType="com.xu.lease.model.entity.ApartmentInfo" autoMapping="true">
                     <id property="id" column="apartment_id"/>
                     <result property="name" column="apartment_name"/>
              </association>
       </resultMap>

    <select id="pageV" resultMap="AppointmentVoMap">
        select va.id,
               va.user_id,
               va.name,
               va.phone,
               va.appointment_time,
               va.additional_info,
               va.appointment_status,

               ai.id apartment_id,
               ai.name apartment_name,
               ai.introduction,
               ai.district_id,
               ai.district_name,
               ai.city_id,
               ai.city_name,
               ai.province_id,
               ai.province_name


        from view_appointment va
                 left join apartment_info ai
                           on va.apartment_id = ai.id and ai.is_deleted = 0
           <where>
                  va.is_deleted = 0
                  <if test="queryVo.provinceId!=null">
                         and ai.provinceId=#{query.provinceId}
                  </if>
                  <if test="queryVo.cityId!=null">
                         and ai.cityId=#{query.cityId}
                  </if>
                  <if test="queryVo.districtId!=null">
                         and ai.districtId=#{query.districtId}
                  </if>
                  <if test="queryVo.apartmentId!=null">
                         and va.apartment_Id=#{query.apartmentId}
                  </if>
                  <if test="queryVo.name!=null and queryVo.name!=''">
                         and va.name like concat('%',#{query.neme},'%')
                  </if>
                  <if test="queryVo.phone!=null and queryVo.phone!=''">
                         and va.phone like concat('%',#{query.phone},'%')
                  </if>
           </where>
    </select>
</mapper>
